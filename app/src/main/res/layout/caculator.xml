<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
    android:layout_height="230dp"
        android:background="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="123456789"
            android:layout_marginTop="130dp"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="200px"
            android:textFontWeight="@integer/material_motion_duration_long_1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/layout1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/hang1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#B7FB6D09"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="200px" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hang2"
            android:layout_below="@+id/hang1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#B7FB6D09"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="200px" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hang3"
            android:layout_below="@+id/hang2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/textview_border"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#B7FB6D09"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="200px" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hang4"
            android:layout_below="@+id/hang3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/textview_border"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@drawable/textview_border"
                android:backgroundTint="#B7FB6D09"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="200px" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hang5"
            android:layout_below="@+id/hang4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/textview_border"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="13.3"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20.1"
                android:background="@drawable/textview_border"
                android:backgroundTint="#59000000"
                android:gravity="center"
                android:text="."
                android:textColor="@color/white"
                android:textSize="200px" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:text="="
                android:background="@drawable/textview_border"
                android:backgroundTint="#B7FB6D09"
                android:textColor="@color/white"
                android:textSize="200px" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>